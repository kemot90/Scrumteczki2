<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <stroke android:color="@android:color/secondary_text_dark_nodisable" android:width="1dp" />
            <gradient android:angle="-90" android:startColor="#8db6dd" android:endColor="#7b98ba" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <stroke android:color="@android:color/secondary_text_dark_nodisable" android:width="1dp" />
            <gradient android:angle="-90" android:startColor="#ddd" android:endColor="#bbb" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8sp" />
            <stroke android:color="@android:color/secondary_text_dark_nodisable" android:width="1dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>