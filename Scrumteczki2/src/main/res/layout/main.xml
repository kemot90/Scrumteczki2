<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        android:layout_margin="10dp">
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/cards"
            android:text="@string/estimate"
            style="@style/mainScreenMenuButton"
            android:onClick="onClickStartEstimateActivity"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/dailyscrum"
            android:text="@string/plan_daily_scrum"
            android:onClick="onClickStartSprintListActivity"
            style="@style/mainScreenMenuButton"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/sun"
        android:text="@string/daily_scrum"
        android:onClick="onClickStartDailyScrumListActivity"
        style="@style/mainScreenMenuButton"/>
</LinearLayout>