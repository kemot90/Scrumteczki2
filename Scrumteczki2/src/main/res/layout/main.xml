<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        android:layout_margin="10dp">
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/cards"
            android:text="@string/estimate"
            style="@style/mainScreenMenuButton"
            android:onClick="onClickStartEstimateActivity"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/dailyscrum"
            android:text="@string/daily_scrum"
            android:onClick="onClickStartSprintListActivity"
            style="@style/mainScreenMenuButton"/>
    <!-- Sekcja testowa - poczÄ…tek-->
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/dailyscrum"
            android:text="Wybierz plik (test)"
            style="@style/mainScreenMenuButton"
            android:onClick="onClickSelectFile"/>
    <TextView
            android:id="@+id/test_output"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
    <!-- Sekcja testowa - koniec-->
</LinearLayout>